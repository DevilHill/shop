<p><%= link_to "添加分类" ,new_admin_category_path %></p>
<%= flash[:notice] %>
<div class="table-c">
  <table width="50%">
    <tr>
      <td style="color:blue; ">大分类名字</td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
    <% @category.each do |c| %>
      <tr>
      <td><%= c.big_title %></td>
      <td><%= link_to "修改" , edit_admin_category_path(c) %></td>
      <td><%= link_to "删除" , admin_category_path(c) , method: :delete , data: { confirm: "确定删除？" } %></td>
      <td><%= link_to "拥有的小分类" ,admin_category_path(c) %></td>
    </tr>
    <% end %>
  </table>
</div>
<%=  will_paginate @category ,:style => " color :blue" %>
<p>共有<%= @category.count %>条记录</p>