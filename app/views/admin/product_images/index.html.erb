<%= flash[:notice] %>
<%= link_to "添加图片" ,new_admin_product_image_path(:product_id => params[:product_id]) %>
<% @product_image.each do |i| %>

  <div>
    <%= image_tag("/product_image/"+i.photo,height: '300', width: '400') %>
    <%= link_to "删除" ,admin_product_image_path(i),method: :delete , data: { confirm:"确定删除?" } %>
  </div>
<% end %>
<%= link_to "返回" ,admin_products_path %>