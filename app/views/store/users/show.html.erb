  .table-body{
    margin: 100px;
    /*border: solid 1px black;*/
  }
    .table-body table{
      border: black 1px solid;
      width: 100%;
      mso-cellspacing: 0;
      text-align: center;
      border-collapse: collapse;
      line-height: 30px;
    }
    .table-body table td{
      border: black 1px solid;
      margin: 0px;
      padding: 0px;
    }
</style>
