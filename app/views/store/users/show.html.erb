<div class="table-body">
  <table>
    <tr>
      <td>用户名</td>
      <td><%= @current_user.login %></td>
    </tr>
    <tr>
      <td>昵称</td>
      <td><%= @current_user.nickname %></td>
    </tr>
    <tr>
      <td>邮箱</td>
      <td><%= @current_user.email %></td>
    </tr>
    <tr>
      <td>账号创建时间</td>
      <% time = @current_user.created_at %>
      <td><%= time.strftime("%Y年%m月%d日%H时%M分") %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= link_to "修改个人数据",edit_store_user_path %></td>
    </tr>
  </table>
</div>
